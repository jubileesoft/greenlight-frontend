<div
  role="button"
  local-class={{
    concat
    "button "
    (if (eq this.isEnabled true) "enabled " "disabled ")
    this.type
  }}
  ...attributes
  {{on "click" this.onClick}}
>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    <div local-class="button-text">
      {{@text}}
    </div>
  {{/if}}
</div>